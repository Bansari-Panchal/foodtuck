<div align="right">
<%= link_to 'Add menu item', new_vendor_product_path(@vendor), class:"btn btn-primary"%><br>
</div>
<br>
<br>
<table>
<div class="menu-whitebox"> 
        <% @products.each do |p| %>
          <div class="productbox">
            <div class="row">
              <div class="col-md-4">
              <%= image_tag(p.item_image , size: 200) if p.item_image.attached? %>
              </div>
              <div class="col-md-6">
                <h3><%= p.name %></h3>
                <strong>$ <%= p.cost_in_dollars %></strong>
                <div class="badge bg-info">
                  <span class="badge-text">
                    <%= p.menu_category %>
                  </span>
                </div>
                <br /><br />
                <%= p.description %>
                <div class="itemTags">
                  <div class="badge bg-info">
                    <span class="badge-text">
                      <%= p.item_tags %>
                    </span>
                  </div>
                </div>
              </div>
              <div class="col-md-2">
                Available
                <label class="switch checkbox-inline">
                  <% if p.availability == true %>
                    <%= check_box_tag :availability , true , checked: true %>
                  <% else %>
                    <%= check_box_tag :availability , false %>
                  <% end %>
                  <span class="slider round"></span>
                </label> 
                <br />
                <% if p.choices.any? %>
                  <%= link_to 'Choices' , vendor_product_path(@vendor, p) ,"data-target" => '#myModal' , class: 'btn btn-link', "data-toggle" => "modal"   %>
                                   
                  <%= render 'modal' %>
                <% end %>

                
                <br /><br /><br /><br />
                <%= link_to 'Add To Catering' , root_path , class: 'btn btn-border' %>
                <%= link_to 'Edit' , edit_vendor_product_path(@vendor , p) , class: 'btn btn-border' %>

              </div>
            </div>
          </div>
          <hr >
        <% end %>
  </table>
  
  