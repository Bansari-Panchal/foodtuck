
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name,url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
  <div class="form-group">
    <%= f.label :email %><span class="red">*</span><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , required: true%>
  </div>
  </div>


  <div class="row">
  <div class="form-group">
    <%= f.label :name %><span class="red">*</span><br />
    <%= f.text_field :name , required: true %>
  </div>
  </div>

  <div class="row">
  <div class="form-group">
  <%= f.label :phone %><span class="red">*</span><br />
    <%= f.text_field :phone , required: true%>
  </div> 
  </div>

  <div class="row">
  <div class="form-group">
    <%= f.label :password %><span class="red">*</span><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id:"user_password",autocomplete: "new-password" , required: true%>
  </div>
  </div>

  <div class="row">
  <div class="form-group">
    <%= f.label :password_confirmation %><span class="red">*</span><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>
  </div>

  <div class="row">
    <div class="form-group actions">
    <%= f.submit "Sign up" , class: "btn btn-lg bg-danger" , id: 'signup'%>
    
</div>
</div>
</div>
<% end %>
</br>

