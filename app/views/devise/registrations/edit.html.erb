<h2 class="alert alert-success">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "user "}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field",align="right"><%= f.label :image %><br />
 <%= f.file_field :image ,id: "image"  %>
</div>
<img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/> <br/>
 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,  class: "input-group-text"%>
  </div>

  <div class="field"><%= f.label :name %><br />
        <%= f.text_field :name %>
  </div>

  <div class="field"><%= f.label :phone %><br />
  <%= f.text_field :phone %>
</div>

<div class="field"><%= f.label :birthdate %><br />
<%= f.text_field :birthdate %>
</div>

<div class="field"><%= f.label :timezone %><br />
<%= time_zone_select :timezone, ActiveSupport::TimeZone.all, nil,
{:include_blank => false,:prompt=>"Select Time Zone"} %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br />
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don not want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" , class: "input-group-text" %>
    <% if @minimum_password_length %>
    <% end %>
  </div>
  <br />
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "input-group-text" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , class: "input-group-text"%>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Update" , class: "btn btn-info" %>
  </div>
<% end %>
</br>
</br>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
